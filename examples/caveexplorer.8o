: block-puzzle
	i := block-reg-buffer
	save vd

	init-level
	loop
		input := key
		if input == RESET   then init-level
		if input == MOVE_LT then walk-left
		if input == MOVE_RT then walk-right
		if input == ACTION  then action
		if win == 0 then
	again

	v0 := 32
	buzzer := v0
	clear

	i := puzzle-finished-count
	load v0
	v0 += 1
	i := puzzle-finished-count
	save v0

	i := block-reg-buffer
	load vd
;

